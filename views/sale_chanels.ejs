<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecolink for life</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="./fontawesome-free-6.6.0-web/css/all.css">
    <link rel="stylesheet" href="./sale_chanels.css">
    <link rel="stylesheet" href="./main.js">
</head>
<body>
    <div class="sale">
        <div class="header-sale">
            <div class="title-sale">Ecolink for life - Kênh người bán</div>
        </div>
        <div class="body-sale row">
            <div class="left-sale col-lg-2">
                <div class="title-text-sale dropdown-toggle">
                    Quản lý đơn hàng <i class="fas fa-chevron-down"></i>
                </div>
                <div class="text-sale">
                    <div class="padding menu-active">Tất cả</div>
                    <div class="padding">Đơn trả hàng/ Hoàn tiền/ Đơn hủy</div>
                    <div class="padding">Cài đặt vận chuyển</div>
                </div>
                <div class="title-text-sale dropdown-toggle">
                    Quản lý sản phẩm <i class="fas fa-chevron-down"></i>
                </div>
                <div class="text-sale">
                    <div class="padding">Tất cả sản phẩm</div>
                    <a href="/add-product" class="padding">Thêm sản phẩm</a>
                </div>
            </div>
            
            <div class="right-sale col-lg-10">
                <div class="header-right-sale">
                    <div class="header-right-sale-title">Tất cả</div>
                    <div class="header-text-right-sale-frame">
                        <div class="header-text-right-sale header-active">Tất cả</div>
                        <div class="header-text-right-sale">Chờ xác nhận</div>
                        <div class="header-text-right-sale">Chờ lấy hàng</div>
                        <div class="header-text-right-sale">Đang giao</div>
                        <div class="header-text-right-sale">Đã giao</div>
                        <div class="header-text-right-sale">Trả hàng/Hoàn tiền/Hủy</div>
                    </div>
                    <div class="header-text-right-sale-frame-line"></div>
                </div>
                <!-- Lọc đơn hàng theo trạng thái -->
                <div class="sort-order-type">
                    <div class="sort-order-type-text"> Trạng thái đơn hàng</div>
                    <button class="sort-order-type-btn btn-active">Tất cả </button>
                    <!-- Trạng thái: Chưa xác nhận; Chưa lấy hàng -->
                    <button class="sort-order-type-btn">Chưa xử lý </button>
                    <!-- Trạng thái Đã giao; trả hàng/hoàn tiền hủy -->
                    <button class="sort-order-type-btn">Đã xử lý</button>
                </div>
                <div class="body-text-right-sale">
                    <div class="body-text-right-sale-MDH">
                        <select class="select-text">
                            <option value="0">Mã đơn hàng</option>
                            <option value="1">Tên người mua</option>
                            <option value="2">Sản phẩm</option>
                        </select>
                        <input type="text" class="body-text-right-sale-MDH-input" placeholder="Nhập Mã đơn hàng">
                    </div>
                    <div class="body-text-right-sale-deliver">
                        <div class="body-text-right-sale-deliver-title">Đơn vị vận chuyển</div>
                        <select class="select-text-deliver">
                            <option value="0">Tất cả ĐVVC</option>
                            <option value="1">Tiết kiệm</option>
                            <option value="2">Hỏa tốc</option>
                            <option value="3">Nhanh</option>
                        </select>
                    </div>
                    <button class="button-body-right-sale btn-active">Áp dụng</button>
                    <button class="button-body-right-sale">Đặt lại</button>
                </div>
                <div class="order-number">
                    <div class="order-number-num"><%= orders.length %></div>
                    <div class="order-number-lb">Đơn hàng</div>
                </div>
                <div class="order-table-header row">
                    <div class="order-table-header-item col-lg-3">Sản phẩm</div>
                    <div class="order-table-header-item col-lg-2">Đơn hàng</div>
                    <div class="order-table-header-item col-lg-2">Trạng thái</div>
                    <div class="order-table-header-item col-lg-2">Số lượng</div>
                    <div class="order-table-header-item col-lg-2">Đơn vị vận chuyển</div>
                    <div class="order-table-header-item col-lg-1">Cập nhật đơn hàng</div>
                </div>
                <div class="order-table-body">
                    <% if (orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <div class="order-table-body-item row">
                                <div class="order-table-body-item-product col-lg-3">
                                    <img class="order-table-body-item-product-img" src="/product_image/<%= order.HinhChinh %>" alt="<%= order.TenSP %>">
                                    <div class="order-table-body-item-product-infor">
                                        <div class="order-table-body-item-product-name"><%= order.TenSP %></div>
                                        <div class="order-table-body-item-product-type">150 ml</div>
                                    </div>
                                    <div class="order-table-body-item-product-quantity-frame">
                                        <div class="order-table-body-item-product-quantity-lb">x</div>
                                        <div class="order-table-body-item-product-quantity"><%= order.SoLuongSP %></div>
                                    </div>
                                </div>
                                <div class="order-table-body-item-order col-lg-2"><%= order.MaDH %></div>
                                <div class="order-table-body-item-status col-lg-2"><%= order.TrangThaiDH %></div>
                                <div class="order-table-body-item-quantity col-lg-2"><%= order.SoLuongSP %></div>
                                <div class="order-table-body-item-shipping col-lg-2"><%= order.TenPTVC %></div>
                                <div class="order-table-body-item-update col-lg-1">
                                    <button class="btn-update-order" data-order-id="<%= order.MaDH %>">Cập nhật</button>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>Không có đơn hàng nào.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <script>
        // CHUYỂN TRẠNG
        // Lấy tất cả các phần tử có class 'header-text-right-sale'
        const saleHeaders = document.querySelectorAll('.header-text-right-sale');

        // Lặp qua các phần tử và thêm sự kiện click
        saleHeaders.forEach(header => {
            header.addEventListener('click', () => {
                // Xóa class 'header-active' khỏi tất cả các phần tử
                saleHeaders.forEach(item => item.classList.remove('header-active'));
                
                // Thêm class 'header-active' vào phần tử được click
                header.classList.add('header-active');
            });
        });

        // button
        // Lấy tất cả các nút
        const buttons = document.querySelectorAll('.button-body-right-sale');

        // Gắn sự kiện click cho từng nút
        buttons.forEach(button => {
            button.addEventListener('click', () => {
                // Xóa class 'btn-active' khỏi tất cả các nút
                buttons.forEach(btn => btn.classList.remove('btn-active'));

                // Thêm class 'btn-active' vào nút được click
                button.classList.add('btn-active');
            });
        });

        // Lấy tất cả các nút trong nhóm 'sort-order-type-btn'
        const sortButtons = document.querySelectorAll('.sort-order-type-btn');

        // Thêm sự kiện click cho mỗi nút
        sortButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Xóa class 'btn-active' khỏi tất cả các nút
                sortButtons.forEach(btn => btn.classList.remove('btn-active'));

                // Thêm class 'btn-active' vào nút được click
                button.classList.add('btn-active');
            });
        });

        const sortOrderType = document.querySelector('.sort-order-type');

        // Thêm sự kiện click vào từng nút trong nhóm header-text-right-sale
        saleHeaders.forEach(header => {
            header.addEventListener('click', () => {
                // Xóa class 'header-active' khỏi tất cả các nút
                saleHeaders.forEach(h => h.classList.remove('header-active'));

                // Thêm class 'header-active' vào nút được click
                header.classList.add('header-active');

                // Kiểm tra nếu nút được click là "Tất cả", hiển thị phần lọc đơn hàng
                if (header.textContent.trim() === 'Tất cả') {
                    sortOrderType.style.display = 'block';
                } else {
                    // Ngược lại, ẩn phần lọc đơn hàng
                    sortOrderType.style.display = 'none';
                }
            });
        });

        document.querySelectorAll('.dropdown-toggle').forEach(toggle => {
            toggle.addEventListener('click', function () {
                // Đóng các dropdown khác
                document.querySelectorAll('.dropdown-toggle').forEach(other => {
                    if (other !== toggle) {
                        other.classList.remove('open');
                        other.nextElementSibling.style.display = 'none';
                    }
                });

                // Toggle hiện/ẩn danh sách
                const textSale = this.nextElementSibling;
                const isOpen = this.classList.toggle('open');
                textSale.style.display = isOpen ? 'flex' : 'none';
            });
        });

        document.querySelector('.menu-active').addEventListener('click', function() {
            const rightSale = document.querySelector('.right-sale');
            if (rightSale.style.display === 'none' || !rightSale.style.display) {
                rightSale.style.display = 'block';
            } else {
                rightSale.style.display = 'none';
            }
        });

        document.querySelectorAll('.padding').forEach(item => {
            item.addEventListener('click', function () {
                // Remove active class from all
                document.querySelectorAll('.padding').forEach(p => p.classList.remove('menu-active'));
                
                // Add active class to clicked item
                this.classList.add('menu-active');

                // Hiển thị nội dung bên phải nếu cần
                document.querySelector('.right-sale').style.display = 'block';
            });
        });

        // Update order status
        document.querySelectorAll('.btn-update-order').forEach(button => {
            button.addEventListener('click', function() {
                const orderId = this.dataset.orderId;
                const statusOptions = ['Chờ xác nhận', 'Chờ lấy hàng', 'Đang giao', 'Đã giao', 'Trả hàng/ Hoàn tiền/ Hủy'];
                const select = document.createElement('select');
                select.classList.add('form-control');
                statusOptions.forEach(status => {
                    const option = document.createElement('option');
                    option.value = status;
                    option.textContent = status;
                    select.appendChild(option);
                });

                Swal.fire({
                    title: 'Cập nhật trạng thái đơn hàng',
                    html: select.outerHTML,
                    showCancelButton: true,
                    confirmButtonText: 'Cập nhật',
                    cancelButtonText: 'Hủy',
                    preConfirm: () => {
                        const selectedStatus = Swal.getPopup().querySelector('select').value;
                        return { orderId, selectedStatus };
                    }
                }).then(result => {
                    if (result.isConfirmed) {
                        const { orderId, selectedStatus } = result.value;
                        fetch('/update-order-status', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ orderId, selectedStatus }),
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Cập nhật thành công!',
                                    text: 'Trạng thái đơn hàng đã được cập nhật.',
                                    timer: 2000,
                                    timerProgressBar: true,
                                    showConfirmButton: false,
                                    didClose: () => {
                                        location.reload(); // Reload the page to reflect changes
                                    }
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Cập nhật thất bại!',
                                    text: data.message,
                                    timer: 3000,
                                    timerProgressBar: true,
                                    showConfirmButton: false
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            Swal.fire({
                                icon: 'error',
                                title: 'Lỗi hệ thống!',
                                text: 'Đã xảy ra lỗi khi cập nhật trạng thái đơn hàng.',
                                timer: 3000,
                                timerProgressBar: true,
                                showConfirmButton: false
                            });
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>