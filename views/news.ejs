<link rel="stylesheet" href="/news.css">
<%- include('layout/mainpage_header') %>
        <!-- NEWS-NAVIGAETION -->
        <div class="news-navigation">
          <a href="/news?category=NB" class="news-navigation-item <%= category === 'NB' ? 'nav-active' : '' %>">Nổi bật</a>
          <a href="/news?category=SKH" class="news-navigation-item <%= category === 'SKH' ? 'nav-active' : '' %>">Sức khỏe</a>
          <a href="/news?category=SKI" class="news-navigation-item <%= category === 'SKI' ? 'nav-active' : '' %>">Sự kiện</a>
          <a href="/news?category=DS" class="news-navigation-item <%= category === 'DS' ? 'nav-active' : '' %>">Đời sống</a>
        </div>
         <div class="news-body row">
            <div class="news-body-article-list col-lg-8">

              <% if (news && news.length > 0) { %>
                <% news.forEach(article => { %>
                    <a href="/news-detail/<%= article.MaBaiBlog %>" class="news-body-article-item">
                        <img class="news-body-article-img" src="<%= article.AnhBia %>" alt="<%= article.TieuDe %>">
                        <div class="news-body-article-content-frame">
                            <div class="news-body-article-title"><%= article.TieuDe %></div>
                            <p class="news-body-article-content"><%= article.NoiDung.substring(0, 200) %></p>
                            <span class="news-body-article-date"><%= article.NgayTao %></span>
                        </div>
                    </a>
                <% }); %>
              <% } else { %>
                  <p>Không có bài viết nào thuộc danh mục này.</p>
              <% } %>

                <br>
                <div class="main-card-see-more">Xem thêm
                  <i class="fa-solid fa-chevron-down"></i>
                </div>
            </div>
            

            
            <div class="news-body-blog col-lg-4">
                <h3 class="new-body-blog-title">Top nhà tương tác hàng đầu</h3>
                <img class="new-body-blog-img" src="../image/logo.jpg" alt="">
                <h3 class="new-body-blog-title">Bài blog liên quan</h3>
                <div class="new-body-blog-relate">
                    <ul class="new-body-blog-relate-list">
                        <li class="new-body-blog-relate-item">
                            <img src="../image/art1.jpg" alt="" class="new-body-blog-relate-item-img">
                            <h4 class="new-body-blog-relate-item-title">Tương lai của năng lượng xanh: Những đổi mới thúc đẩy cuộc cách mạng sinh thái</h4>
                        </li>

                        <li class="new-body-blog-relate-item">
                            <img src="../image/art2.jpg" alt="" class="new-body-blog-relate-item-img">
                            <h4 class="new-body-blog-relate-item-title">Thời trang bền vững: Ngành công nghiệp đang trở nên xanh như thế nào</h4>
                        </li>
                        <li class="new-body-blog-relate-item">
                            <img src="../image/art3.jpg" alt="" class="new-body-blog-relate-item-img">
                            <h4 class="new-body-blog-relate-item-title">Giảm rác thải nhựa: Chiến lược cho một hành tinh xanh hơn</h4>
                        </li>

                        <li class="new-body-blog-relate-item">
                          <img src="../image/art4.jpg" alt="" class="new-body-blog-relate-item-img">
                          <h4 class="new-body-blog-relate-item-title">Kiến trúc thân thiện với môi trường: Xây dựng tương lai bền vững</h4>
                        </li>

                        <li class="new-body-blog-relate-item">
                          <img src="../image/art5.jpg" alt="" class="new-body-blog-relate-item-img">
                          <h4 class="new-body-blog-relate-item-title">Tác động của biến đổi khí hậu đối với an ninh lương thực toàn cầu</h4>
                        </li>
                    </ul>
                </div>
            </div>
         </div>
         <script type="text/javascript" >
          function setActiveClass() {
        // Lấy URL hiện tại
        var currentUrl = window.location.href;

        // Danh sách các trang và ID tương ứng
        var pages = {
        };

        // Xóa class active khỏi tất cả các mục
        var items = document.querySelectorAll('.navigation-item');
        items.forEach(function(item) {
            item.classList.remove('active');
        });

        // Gán class active cho mục tương ứng
        if (pages[currentUrl]) {
            document.getElementById(pages[currentUrl]).classList.add('active');
        }
    }

function navigateTo(url) {
    window.location.href = url; // Chuyển hướng đến URL
}

// Gán sự kiện cho các mục trong menu
document.getElementById('trang-chu').onclick = function() { // Chuyển đến Trang Chủ
};

document.getElementById('san-pham').onclick = function() { // Chuyển đến Sản Phẩm
};

document.getElementById('dien-dan').onclick = function() {// Chuyển đến Diễn Đàn
};

document.getElementById('blog').onclick = function() { // Chuyển đến Blog
};

// Gọi hàm khi trang được tải xong
window.onload = function() {
    setActiveClass(); // Gán class active cho mục hiện tại
};

         </script>
